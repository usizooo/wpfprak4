<Page x:Class="Quiz.QuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuizPage">

    <Grid>
        <StackPanel Margin="30,40,30,30">
            <Label x:Name="questionNameLabel" FontFamily="Cascadia Code SemiBold" FontSize="30" Foreground="#004842" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Label x:Name="questionDescriptionLabel" FontFamily="Cascadia Code SemiBold" Foreground="#004842" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Label Height="60" />
            <Label x:Name="answerStatusLabel" Height="60" FontFamily="Cascadia Code SemiBold" Foreground="#004842" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button x:Name="firstAnswerButton" Click="firstAnswerButton_Click"/>
            <Button x:Name="secondAnswerButton" Click="secondAnswerButton_Click"/>
            <Button x:Name="thirdAnswerButton" Click="thirdAnswerButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
