<Page x:Class="Quiz.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Quiz"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300"
      Title="EditPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="goToEditQuizButton" Content="Я хочу поменять тест" FontFamily="Cascadia Code SemiBold" Foreground="White" Margin ="5" Grid.Column="1" Grid.Row="1" Click="goToEditQuizButton_Click"/>
        <TextBox x:Name="passwordTextBox" Text="Введите пароль админа" Foreground="Teal" FontFamily="Cascadia Code SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" PreviewMouseDown="passwordTextBox_PreviewMouseDown" PreviewKeyDown="passwordTextBox_PreviewKeyDown" FontSize="14"/>

    </Grid>
</Page>
